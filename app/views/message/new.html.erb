<div class="container">
    <div class="col-md-5">
        <div class="form-area">
            <form role="form">
                <br style="clear:both">
                <h3 style="margin-bottom: 25px; text-align: center;">Message</h3>
                <%= form_for @message do |f|%>
                Name : <%= f.text_field :receiver_id%></br>
                Content : <%= f.text_field :content, class:"form-control"%></br>
                <%= f.submit "Send"%>
                <% end %>
