<div class="container">
    <div class="row justify-content-center">
                <%= form_for(@message) do |f|%>        
                <h1>Message</h1>                
                <%= f.label :receiver_id %>
                <%= f.text_field :receiver_id, class:"form-control" %>
                
                <%= f.label :content %>
                <%= f.text_field :content, class:"form-control" %>
                <%= f.submit "Send", class:"btn btn-primary form-control"%>
                <% end %>                
            
    </div>
</div>